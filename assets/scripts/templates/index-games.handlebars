{{#each games as |game|}}
  <section data-id="{{game.id}}">
    <h6>Title:</h6>
    <h3>
      {{game.title}}
    </h2>
    <p>
      {{game.min_players}} to {{game.max_players}} players
    </p>
    <p>
      {{game.time_in_minutes}} minutes
    </p>
    <h4>Description:</h4>
    <p>
      {{game.description}}
    </p>
    <button data-id="{{game.id}}" class="btn btn-success add-to-shelf">Add to Your Shelf</button>
  </section>

{{/each}}
