<h2>All Games</h2>
{{#each games as |game|}}
  <section data-id="{{game.id}}">
    <h3>
      {{game.title}}
    </h3>
    <p>
      Players: {{game.min_players}} to {{game.max_players}} players
    </p>
    <p>
      Play time: {{game.time_in_minutes}} minutes
    </p>
    <p>
      Description: {{game.description}}
    </p>
    <button data-id="{{game.id}}" class="btn btn-success add-to-shelf">Add to Your Shelf</button>
  </section>

{{/each}}
